<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews
    </IfModule>

    RewriteEngine On


    # Redirects from the old site
    RewriteCond %{HTTP_HOST} ^www.belmont-technology.com$
    RewriteCond %{REQUEST_URI} ^/$ [OR]
    RewriteCond %{REQUEST_URI} ^/main.taf?
    RewriteRule ^(.*)$          http://www.sipiar.com?  [NC,R=301,L]

    RewriteCond %{HTTP_HOST} ^www.belmont-technology.com$
    RewriteCond %{REQUEST_URI} ^/(.*)/main.taf?
    RewriteRule ^(.*)/main.taf?$          https://portal.sipiar.com/$1/  [NC,R=301,L]

    RewriteCond %{HTTP_HOST} ^www.belmont-technology.com$
    RewriteCond %{REQUEST_URI} !^/(.*)/main.taf?
    RewriteRule ^(.*)$          https://portal.sipiar.com/$1/  [NC,R=301,L]

    #######################################################################
    # ALWAYS SSL (Handles Situation where the SSL terminates at the load balancer)
    #######################################################################

    RewriteCond %{HTTPS} !=on
    RewriteCond %{HTTP:X-Forwarded-Proto} !https
    RewriteRule ^/?(.*) https://%{SERVER_NAME}/$1          [R=301,L]

    # Airgas Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/airgas/pickuprequest$          [NC]
    RewriteCond %{REQUEST_URI} ^/airgas/page/pickuprequest$     [OR,NC]
    RewriteRule ^.*$  "/airgas/pickup-request"                  [R,NE,L]

    # Amobee Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/amobee/pickuprequest$          [NC]
    RewriteCond %{REQUEST_URI} ^/amobee/page/pickuprequest$     [OR,NC]
    RewriteRule ^.*$  "/amobee/pickup-request"                  [R,NE,L]

    # Anaplan Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/anaplan/pickuprequest$         [NC]
    RewriteCond %{REQUEST_URI} ^/anaplan/page/pickuprequest$    [OR,NC]
    RewriteRule ^.*$  "/anaplan/pickup-request"                 [R,NE,L]

    # Centene Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/centene/pickuprequest$         [NC]
    RewriteCond %{REQUEST_URI} ^/centene/page/pickuprequest$    [OR,NC]
    RewriteRule ^.*$  "/centene/pickup-request"                 [R,NE,L]

    # Cerner Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/cerner/pickuprequest$          [NC]
    RewriteCond %{REQUEST_URI} ^/cerner/page/pickuprequest$     [OR,NC]
    RewriteRule ^.*$  "/cerner/pickup-request"                  [R,NE,L]

    # Chegg Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/chegg/pickuprequest$           [NC]
    RewriteCond %{REQUEST_URI} ^/chegg/page/pickuprequest$      [OR,NC]
    RewriteRule ^.*$  "/chegg/pickup-request"                   [R,NE,L]

    # Ebay Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/ebay/pickuprequest$            [NC]
    RewriteCond %{REQUEST_URI} ^/ebay/page/pickuprequest$       [OR,NC]
    RewriteRule ^.*$  "/ebay/pickup-request"                    [R,NE,L]

    # First American Title Company Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/firstamericantitlecompany/pickuprequest$      [NC]
    RewriteCond %{REQUEST_URI} ^/firstamericantitlecompany/page/pickuprequest$ [OR,NC]
    RewriteRule ^.*$  "/firstamericantitlecompany/pickup-request"              [R,NE,L]

    # GoDaddy Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/godaddy/pickuprequest$         [NC]
    RewriteCond %{REQUEST_URI} ^/godaddy/page/pickuprequest$    [OR,NC]
    RewriteRule ^.*$  "/godaddy/pickup-request"                 [R,NE,L]

    # LinkedIn Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/linkedin/pickuprequest$        [NC]
    RewriteCond %{REQUEST_URI} ^/linkedin/page/pickuprequest$   [OR,NC]
    RewriteRule ^.*$  "/linkedin/pickup-request"                [R,NE,L]

    # Magento Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/magento/pickuprequest$         [NC]
    RewriteCond %{REQUEST_URI} ^/magento/page/pickuprequest$    [OR,NC]
    RewriteRule ^.*$  "/magento/pickup-request"                 [R,NE,L]

    # PayPal Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/paypal/pickuprequest$          [NC]
    RewriteCond %{REQUEST_URI} ^/paypal/page/pickuprequest$     [OR,NC]
    RewriteRule ^.*$  "/paypal/pickup-request"                  [R,NE,L]

    # Pixar Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/pixar/pickuprequest$           [NC]
    RewriteCond %{REQUEST_URI} ^/pixar/page/pickuprequest$      [OR,NC]
    RewriteRule ^.*$  "/pixar/pickup-request"                   [R,NE,L]

    # Principal Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/principal/pickuprequest$       [NC]
    RewriteCond %{REQUEST_URI} ^/principal/page/pickuprequest$  [OR,NC]
    RewriteRule ^.*$  "/principal/pickup-request"               [R,NE,L]

    # Quadbridge Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/quadbridge/pickuprequest$      [NC]
    RewriteCond %{REQUEST_URI} ^/quadbridge/page/pickuprequest$ [OR,NC]
    RewriteRule ^.*$  "/quadbridge/pickup-request"              [R,NE,L]

    # SipiDemo Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/sipidemo/pickuprequest$        [NC]
    RewriteCond %{REQUEST_URI} ^/sipidemo/page/pickuprequest$   [OR,NC]
    RewriteRule ^.*$  "/sipidemo/pickup-request"                [R,NE,L]

    # Switch Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/switch/pickuprequest$          [NC]
    RewriteCond %{REQUEST_URI} ^/switch/page/pickuprequest$     [OR,NC]
    RewriteRule ^.*$  "/switch/pickup-request"                  [R,NE,L]

    # Trinity Health Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/trinity/pickuprequest$         [NC]
    RewriteCond %{REQUEST_URI} ^/trinity/page/pickuprequest$    [OR,NC]
    RewriteRule ^.*$  "/trinity/pickup-request"                 [R,NE,L]

    # Workday Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/workday/pickuprequest$         [NC]
    RewriteCond %{REQUEST_URI} ^/workday/page/pickuprequest$    [OR,NC]
    RewriteRule ^.*$  "/workday/pickup-request"                 [R,NE,L]

    # Redirect hits to Yahoo to Oath
    RewriteCond %{REQUEST_URI} ^/yahoo$                         [OR,NC]
    RewriteCond %{REQUEST_URI} ^/yahoo/home$                    [OR,NC]
    RewriteCond %{REQUEST_URI} ^/yahoo/login$                   [NC]
    RewriteRule ^.*$  "/oath"                                   [R,NE,L]

    # Oath (previously Yahoo) Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/yahoo/page/pickuprequest$      [OR,NC]
    RewriteCond %{REQUEST_URI} ^/yahoo/pickuprequest$           [OR,NC]
    RewriteCond %{REQUEST_URI} ^/yahoo/pickup-request$          [OR,NC]
    RewriteCond %{REQUEST_URI} ^/yahoo/pickup-request/login$    [OR,NC]
    RewriteCond %{REQUEST_URI} ^/oath/page/pickuprequest$       [OR,NC]
    RewriteCond %{REQUEST_URI} ^/oath/pickuprequest$            [NC]
    RewriteRule ^.*$  "/oath/pickup-request"                    [R,NE,L]

    # Zeta Interactive Pickup Request Form Redirects
    RewriteCond %{REQUEST_URI} ^/zeta/pickuprequest$            [NC]
    RewriteCond %{REQUEST_URI} ^/zeta/page/pickuprequest$       [OR,NC]
    RewriteRule ^.*$  "/zeta/pickup-request"                    [R,NE,L]


    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)/$ /$1 [L,R=301]

    # Handle Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
</IfModule>
